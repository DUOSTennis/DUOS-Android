<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DUOS" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@font/applesdgothicneoregular</item>
        <item name="buttonStyle">@font/applesdgothicneoregular</item>
        <item name="editTextStyle">@font/applesdgothicneoregular</item>
        <item name="radioButtonStyle">@font/applesdgothicneoregular</item>
        <item name="checkboxStyle">@font/applesdgothicneoregular</item>
        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_70</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/applesdgothicneoregular</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_logo</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/white_smoke_F</item>
        <!--Display textSize-->
        <item name="android:textSize">25sp</item>
        <!--Display textColor-->
        <item name="android:editTextColor">@color/nero</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:layout_marginBottom">300dp</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/applesdgothicneoregular</item>
        <item name="android:textColor">@color/nero</item>
    </style>


</resources>