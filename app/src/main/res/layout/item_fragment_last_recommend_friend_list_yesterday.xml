<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/last_recommend_friend_list_yesterday_profile_image_cv"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/last_recommend_friend_list_yesterday_profile_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/friend_list_profile_01" />
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/last_recommend_friend_list_yesterday_profile_image_cv"
        app:layout_constraintBottom_toBottomOf="@id/last_recommend_friend_list_yesterday_profile_image_cv"
        app:layout_constraintStart_toEndOf="@id/last_recommend_friend_list_yesterday_profile_image_cv"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/last_recommend_friend_list_yesterday_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4evertennis"
            android:textSize="15sp"
            android:textColor="@color/nero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/last_recommend_friend_list_yesterday_age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30대"
            android:textSize="11sp"
            android:textColor="@color/grey"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/last_recommend_friend_list_yesterday_id_tv"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/last_recommend_friend_list_yesterday_comma_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", "
            android:textSize="11sp"
            android:textColor="@color/grey"
            app:layout_constraintTop_toTopOf="@id/last_recommend_friend_list_yesterday_age_tv"
            app:layout_constraintStart_toEndOf="@id/last_recommend_friend_list_yesterday_age_tv"/>

        <TextView
            android:id="@+id/last_recommend_friend_list_yesterday_sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여"
            android:textSize="11sp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@id/last_recommend_friend_list_yesterday_comma_tv"
            app:layout_constraintTop_toTopOf="@id/last_recommend_friend_list_yesterday_age_tv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/last_recommend_friend_list_yesterday_delete_btn"
        android:layout_width="46dp"
        android:layout_height="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/last_recommend_friend_list_yesterday_profile_image_cv"
        app:layout_constraintBottom_toBottomOf="@id/last_recommend_friend_list_yesterday_profile_image_cv"
        android:layout_marginEnd="16dp"
        android:text="@string/friend_list_delete"
        android:gravity="center"
        android:background="@drawable/my_friend_list_delete_rectangular"
        android:textColor="@color/dark_gray_A"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/last_recommend_friend_list_yesterday_like_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintEnd_toStartOf="@id/last_recommend_friend_list_yesterday_delete_btn"
        app:layout_constraintTop_toTopOf="@id/last_recommend_friend_list_yesterday_delete_btn"
        app:layout_constraintBottom_toBottomOf="@id/last_recommend_friend_list_yesterday_delete_btn"
        android:layout_marginEnd="16dp"
        android:src="@drawable/last_recommend_friend_list_like_ic"/>


</androidx.constraintlayout.widget.ConstraintLayout>