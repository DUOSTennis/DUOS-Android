<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signup_03_local_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_local"
        android:textColor="@color/nero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:id="@+id/signup_03_linear_layout_ll"
        android:layout_width="180dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="@id/signup_03_local_tv"
        app:layout_constraintTop_toBottomOf="@id/signup_03_local_tv"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingStart="2dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_local_set"
            android:textColor="@color/nero"
            android:textSize="16sp"/>
        
        <ImageView
            android:layout_width="10dp"
            android:layout_height="7dp"
            android:src="@drawable/signup_local_arrow_ic"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/signup_04_local_line_done_iv"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:src="@drawable/signup_unselected_line"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_03_linear_layout_ll"
        app:layout_constraintStart_toStartOf="@id/signup_03_linear_layout_ll"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>