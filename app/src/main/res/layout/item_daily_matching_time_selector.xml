<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <Button
        android:id="@+id/daily_matching_time_selector_btn"
        android:layout_width="43dp"
        android:layout_height="33dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/daily_matching_time_rectangle"
        android:paddingEnd="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/daily_matching_time_selector_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:text="02:00"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/daily_matching_time_selector_btn"
        app:layout_constraintTop_toBottomOf="@id/daily_matching_time_selector_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>