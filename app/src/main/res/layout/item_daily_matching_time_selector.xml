<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="55dp"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/daily_matching_time_selector_btn"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:background="@drawable/daily_matching_time_rectangle"
        android:backgroundTint="@color/btn_time_color_selector" />


    <TextView
        android:id="@+id/daily_matching_time_selector_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="7dp"
        android:text="01:00"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="11sp"/>

</androidx.appcompat.widget.LinearLayoutCompat>