<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_daily_matching_recent_search_tv"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_rectangle_primary"
        android:fontFamily="@font/applesdgothicneoregular"
        android:gravity="center"
        android:includeFontPadding="true"
        android:paddingHorizontal="10dp"
        android:paddingEnd="30dp"
        android:text="최근 검색한 단어"
        android:textColor="@color/primary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <ImageView
        android:id="@+id/item_daily_matching_recent_search_delete_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_btn_close_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_daily_matching_recent_search_tv"
        app:layout_constraintEnd_toEndOf="@+id/item_daily_matching_recent_search_tv"
        app:layout_constraintTop_toTopOf="@+id/item_daily_matching_recent_search_tv"

        />

</androidx.constraintlayout.widget.ConstraintLayout>