<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_rectangle_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:id="@+id/item_daily_matching_recent_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/applesdgothicneoregular"
            android:gravity="center"
            android:includeFontPadding="true"
            android:paddingHorizontal="10dp"
            android:paddingEnd="10dp"
            android:text="최근 검색한 단어"
            android:textColor="@color/primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/item_daily_matching_recent_search_delete_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/item_daily_matching_recent_search_delete_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_btn_close_iv"
            app:layout_constraintBottom_toBottomOf="@id/item_daily_matching_recent_search_tv"
            app:layout_constraintEnd_toEndOf="@+id/item_daily_matching_recent_search_tv"
            app:layout_constraintStart_toEndOf="@+id/item_daily_matching_recent_search_tv"
            app:layout_constraintTop_toTopOf="@+id/item_daily_matching_recent_search_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>