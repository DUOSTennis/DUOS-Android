<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.mypage.myprofile.frag.EditProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/myProfile_img_cv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            app:cardCornerRadius="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_mask_1"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/guide_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/applesdgothicneoregular"
            android:text="@string/edit_profile_guide_nickname"
            android:textColor="@color/dark_gray_B4"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myProfile_img_cv" />

        <EditText
            android:id="@+id/nickname_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/edt_focus_selector"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/applesdgothicneoregular"
            android:hint="@string/edit_profile_fillin_nickname"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            android:paddingBottom="7dp"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/btn_check_duplication_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guide_nickname_tv" />

        <ImageView
            android:id="@+id/state_duplication_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_state_duplication"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/nickname_et"
            app:layout_constraintTop_toTopOf="@+id/nickname_et" />


        <ImageView
            android:id="@+id/btn_erase_all_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/ic_btn_edt_erase_all"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/state_duplication_iv"
            app:layout_constraintTop_toTopOf="@+id/nickname_et" />


        <TextView
            android:id="@+id/btn_check_duplication_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_rectangle_check_duplicate"
            android:fontFamily="@font/applesdgothicneoregular"
            android:gravity="center"
            android:text="@string/edit_profile_check_duplication"
            android:textColor="@color/dark_gray_A"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/nickname_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nickname_et"

            />

        <TextView
            android:id="@+id/guide_birth_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/applesdgothicneoregular"
            android:text="@string/edit_profile_guide_birth_info"
            android:textColor="@color/dark_gray_B4"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nickname_et" />

        <EditText
            android:id="@+id/birth_info_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/edt_focus_selector"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/applesdgothicneoregular"
            android:hint="@string/edit_profile_fillin_birth_info"
