<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.mypage.setup.SetupFragment">

    <TextView
        android:id="@+id/btn_notice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/applesdgothicneoregular"
        android:text="알림"
        android:textColor="@color/nero"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    바꿔야댐-->
    <ImageView
        android:id="@+id/btn_send_email_to_cs_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_btn_airplane_send_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notice_onoff_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/applesdgothicneoregular"
        android:text="꺼짐"
        android:textColor="@color/grey"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/btn_send_email_to_cs_iv"
        app:layout_constraintTop_toBottomOf="@id/btn_send_email_to_cs_iv" />

    <TextView
        android:id="@+id/btn_login_logout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/applesdgothicneoregular"
        android:text="로그아웃"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_notice_tv"
        app:layout_constraintTop_toBottomOf="@+id/notice_onoff_tv" />

    <TextView
        android:id="@+id/btn_delete_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/applesdgothicneoregular"
        android:text="탈퇴하기"
        android:textColor="@color/nero"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_login_logout_tv"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_logout_tv" />


    <ImageView
        android:id="@+id/btn_delete_account_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_delete_account_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>