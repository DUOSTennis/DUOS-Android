<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/partner_search_recommended_partner_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/partner_search_recommended_partner_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        app:layout_constraintHorizontal_weight="1"
        android:src="@drawable/partner_profile_img_1"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="서울시 마포구"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:includeFontPadding="true"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/applesdgothicneoregular"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/partner_search_recommended_partner_iv"
        app:layout_constraintStart_toStartOf="@id/partner_search_recommended_partner_iv"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_rectangle"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_ball_capability_tv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="@string/partner_search_recommended_partner_ball_capability"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:includeFontPadding="true"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/applesdgothicneoregular"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/partner_search_recommended_partner_location_tv"
        app:layout_constraintStart_toEndOf="@id/partner_search_recommended_partner_location_tv"
        android:layout_marginStart="4dp"
        android:background="@drawable/rounded_rectangle"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/partner_search_recommended_partner_id"
        android:textSize="11sp"
        android:fontFamily="@font/applesdgothicneoregular"
        app:layout_constraintStart_toStartOf="@id/partner_search_recommended_partner_iv"
        app:layout_constraintTop_toBottomOf="@id/partner_search_recommended_partner_iv"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_comma_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=", "
        android:textSize="11sp"
        android:fontFamily="@font/applesdgothicneoregular"
        app:layout_constraintStart_toEndOf="@id/partner_search_recommended_partner_id_tv"
        app:layout_constraintTop_toTopOf="@id/partner_search_recommended_partner_id_tv"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/partner_search_recommended_partner_age"
        android:textSize="11sp"
        android:fontFamily="@font/applesdgothicneoregular"
        app:layout_constraintStart_toEndOf="@id/partner_search_recommended_partner_comma_tv"
        app:layout_constraintTop_toTopOf="@id/partner_search_recommended_partner_comma_tv"/>

    <ImageView
        android:id="@+id/partner_search_star_ic"
        android:layout_width="13dp"
        android:layout_height="13dp"
        app:layout_constraintStart_toStartOf="@+id/partner_search_recommended_partner_id_tv"
        app:layout_constraintTop_toBottomOf="@id/partner_search_recommended_partner_id_tv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_star"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_star_rating_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/partner_search_recommended_partner_star_rating"
        android:textSize="13sp"
        android:textStyle="bold"
        android:fontFamily="@font/applesdgothicneoregular"
        app:layout_constraintStart_toEndOf="@id/partner_search_star_ic"
        app:layout_constraintTop_toTopOf="@id/partner_search_star_ic"
        app:layout_constraintBottom_toBottomOf="@id/partner_search_star_ic"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_review_count_left_bracket_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/applesdgothicneoregular"
        app:layout_constraintStart_toEndOf="@+id/partner_search_recommended_partner_star_rating_tv"
        app:layout_constraintTop_toTopOf="@id/partner_search_star_ic"
        app:layout_constraintBottom_toBottomOf="@id/partner_search_star_ic"
        android:layout_marginStart="7dp"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_review_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/partner_search_recommended_partner_review_count"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/applesdgothicneoregular"
        app:layout_constraintStart_toEndOf="@+id/partner_search_recommended_partner_review_count_left_bracket_tv"
        app:layout_constraintTop_toTopOf="@id/partner_search_star_ic"
        app:layout_constraintBottom_toBottomOf="@id/partner_search_star_ic"/>

    <TextView
        android:id="@+id/partner_search_recommended_partner_review_count_right_bracket_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/applesdgothicneoregular"
        app:layout_constraintStart_toEndOf="@id/partner_search_recommended_partner_review_count_tv"
        app:layout_constraintTop_toTopOf="@id/partner_search_star_ic"
        app:layout_constraintBottom_toBottomOf="@id/partner_search_star_ic"/>

</androidx.constraintlayout.widget.ConstraintLayout>