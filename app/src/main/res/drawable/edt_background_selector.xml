<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--    <item android:state_focused="true" android:drawable="@drawable/edt_background_selected"/>-->

    <!--    <item android:state_focused="false" android:drawable="@drawable/edt_background_normal"/>-->
    <item android:state_focused="true">
        <shape android:shape="line"
            android:opticalInsetTop="16sp">
            <stroke android:width="1dp" android:color="@color/nero" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape android:shape="line">
            <stroke android:width="1dp" android:color="@color/grey" />

        </shape>
    </item>


</selector>